<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Recipe_app.MainPage">
    <VerticalStackLayout VerticalOptions="Center"
                         HorizontalOptions="Center">
        <Image Source="cooking.png" HorizontalOptions="Center"
                                    HeightRequest="250"
                                    VerticalOptions="Center"
               />
        
            <Label Text="Thousands of tested recipes"
       HorizontalOptions="Center"
       FontSize="Large"
       FontAttributes="Bold"/>
        
            <Label Text="There is no need to failure. Tested recipes are guaranteed to work by our professional chefs."
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Padding="30"
                   FontSize="Medium"/>
       
            <Grid Padding="0,180,0,0"
      HorizontalOptions="Center"
      VerticalOptions="End"
      Scale="1"
          >
                <Button WidthRequest="350"
        Text="Get started"
        FontAttributes="Bold"
        VerticalOptions="End"
        BackgroundColor="Orange"
         FontSize="17"
        CornerRadius="20"
        Clicked="Button_Clicked"
                        
        
        />
            </Grid>
        
        




    </VerticalStackLayout>
    
    
    
</ContentPage>
